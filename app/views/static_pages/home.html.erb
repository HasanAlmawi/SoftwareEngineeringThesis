<% provide(:title, 'Home') %>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
<link href="/assets/ripples.min.css" rel="stylesheet">
<link href="/assets/material-wfont.min.css" rel="stylesheet">
<link href="/assets/custom.css" rel="stylesheet">
<% if signed_in? %>
    <div id="calendar">
        <div id="month">
            <ul class="pager">
                <li><a href="javascript:void(0)">Previous</a></li>
                <li> January </li>
                <li><a href="javascript:void(0)">Next</a></li>
            </ul>
        </div>
        <span class="panel panel-material-deeppurple" style="float: left; margin-right: 1px;">
            <div class="panel-heading" style="position: relative;">
                <h3 class="panel-title" style="float: center">Sunday</h3>
            </div>
            <div class="panel-body" id="day" data-toggle="modal" data-target="#simple-dialog"> 28 </div>
            <div class="panel-body" id="day"> 4 </div>
            <div class="panel-body" id="day"> 11 </div>
            <div class="panel-body" id="day"> 18 </div>
            <div class="panel-body" id="day"> 25 </div>
        </span>
        <span class="panel panel-material-deeppurple" style="float: left; margin-right: 1px;">
            <div class="panel-heading" style="position: relative;">
                <h3 class="panel-title" style="float: center">Monday</h3>
            </div>
            <div class="panel-body" id="day"> 29 </div>
            <div class="panel-body" id="day"> 5 </div>
            <div class="panel-body" id="day"> 12 </div>
            <div class="panel-body" id="day"> 19 </div>
            <div class="panel-body" id="day"> 26 </div>
        </span>
        <span class="panel panel-material-deeppurple" style="float: left; margin-right: 1px;">
            <div class="panel-heading" style="position: relative;">
                <h3 class="panel-title" style="float: center">Tuesday</h3>
            </div>
            <div class="panel-body" id="day"> 30 </div>
            <div class="panel-body" id="day"> 6 </div>
            <div class="panel-body" id="day"> 13 </div>
            <div class="panel-body" id="day"> 20 </div>
            <div class="panel-body" id="day"> 27 </div>
        </span>
        <span class="panel panel-material-deeppurple" style="float: left; margin-right: 1px;">
            <div class="panel-heading" style="position: relative;">
                <h3 class="panel-title" style="float: center">Wednesday</h3>
            </div>
            <div class="panel-body" id="day"> 31 </div>
            <div class="panel-body" id="day"> 7 </div>
            <div class="panel-body" id="day"> 14 </div>
            <div class="panel-body" id="day"> 21 </div>
            <div class="panel-body" id="day"> 28 </div>
        </span>
        <span class="panel panel-material-deeppurple" style="float: left; margin-right: 1px;">
            <div class="panel-heading" style="position: relative;">
                <h3 class="panel-title" style="float: center">Thursday</h3>
            </div>
            <div class="panel-body" id="day"> 1 </div>
            <div class="panel-body" id="day"> 8 </div>
            <div class="panel-body" id="day"> 15 </div>
            <div class="panel-body" id="day"> 22 </div>
            <div class="panel-body" id="day"> 29 </div>
        </span>
        <span class="panel panel-material-deeppurple" style="float: left; margin-right: 1px;">
            <div class="panel-heading" style="position: relative;">
                <h3 class="panel-title" style="float: center">Friday</h3>
            </div>
            <div class="panel-body" id="day"> 2 </div>
            <div class="panel-body" id="day"> 9 </div>
            <div class="panel-body" id="day"> 16 </div>
            <div class="panel-body" id="day"> 23 </div>
            <div class="panel-body" id="day"> 30 </div>
        </span>
        <span class="panel panel-material-deeppurple" style="float: left; margin-right: 1px;">
            <div class="panel-heading" style="position: relative;">
                <h3 class="panel-title" style="float: center">Saturday</h3>
            </div>
            <div class="panel-body" id="day"> 3 </div>
            <div class="panel-body" id="day"> 10 </div>
            <div class="panel-body" id="day"> 17 </div>
            <div class="panel-body" id="day"> 24 </div>
            <div class="panel-body" id="day"> 31 </div>
        </span>
    </div>
    <div id="upcomingEvents">
        <div class="panel panel-material-deeppurple">
            <div class="panel-heading">
                <h3 class="panel-title">Upcoming Events</h3>
            </div>
            <div class="panel-body">
                Event
            </div>
        </div>
    </div>
    <div id="input">
        <div class="panel panel-material-deeppurple">
            <div class="panel-heading">
                <h3 class="panel-title">Add Event</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <input class="form-control floating-label" id="focusedInput" type="text" placeholder="Input key" data-hint="Key form: XX123">
                </div>
                <button class="btn btn-material-lightgreen" style="float: right;">Confirm</button>
            </div>
        </div>
    </div>
    <div id="simple-dialog" class="modal fade" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <form class="form-horizontal">
                <fieldset>
                    <div class="form-group" id="accountChange">
                        <div class="accElement">
                            <label class="col-lg-2 control-label" style="position: relative; margin-top: 2%;"> Lecture </label>
                            <div class="col-lg-10" style="position: relative; margin-top: 2%;">
                                <div id="newFN">
                                    <input type="text" class="form-control floating-label" placeholder="Event Name">
                                </div>
                            </div>
                            <button class="btn btn-primary btn-flat"><i class="mdi-navigation-check"></i> Ok</button>
                            <button class="btn btn-default btn-flat"><i class="mdi-navigation-close"></i> Cancel</button>
                        </div>
                    </div>
                </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>

    <style>
        #upcomingEvents{
            position: relative;
            float: left;
            margin-left: 17%;
            margin-top: 10%;
        }
        #input{
            position: relative;
            float: left;
            margin-top: 2%;
            margin-left: 17%;
        }
        .week{
            position: relative;
            margin-top: 2%;
        }
        #day{
            position: relative;
            width:110px;
            height:75px;
            background-color:#E3E3E3;
        }
        #calendar{
            position: relative;
            float: left;
            margin-left: 7%;
            margin-top: 2%;
        }
    </style>
<% else %>
    <div class="center hero-unit">
        <h1>Welcome to the Schulich Round Attendance System</h1>

        <h2>
            You may sign up or sign in by clicking below.
        </h2>

        <%= link_to "Sign Up/Sign In", signup_path, class: "btn btn-large btn-primary" %>
    </div>

    <%= link_to image_tag("schulich.png", alt: "Schulich"), "http://www.schulich.uwo.ca/" %>
    <div style="float: right;">
        <%= link_to image_tag("western.png", alt: "Western"), "http://www.uwo.ca/" %>
    </div>
<% end %>

<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<script src="/assets/js/ripples.min.js"></script>
<script src="/assets/js/material.min.js"></script>
<script>
    $(document).ready(function() {
        $.material.init();
    });
</script>