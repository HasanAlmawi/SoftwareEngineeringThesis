<% provide(:title, 'Home') %>

<link href="/assets/ripples.css" rel="stylesheet">
<link href="/assets/material-wfont.css" rel="stylesheet">
<link href="/assets/custom.css" rel="stylesheet">
<link href="/assets/fullcalendar.css" rel="stylesheet">
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<!-- <script src="/assets/jquery.js" type="text/javascript"></script>
 --><script src="/assets/ripples.js" type="text/javascript"></script>
<script src="/assets/material.js" type="text/javascript"></script>

<script src="/assets/moment.js" type="text/javascript"></script>
<script src="/assets/fullcalendar.js" type="text/javascript"></script>
<script src="/assets/bootstrapmodal.min.js" type="text/javascript"></script>

<% if signed_in? %>
        <h1 class="visible-lg-block" align="left">Events</h1>
        <h2 class="visible-md-block" align="left">Events</h2>
        <h3 class="visible-sm-block" align="left">Events</h3>
        <h4 class="visible-xs-block" align="left">Events</h4>
    <br>
    <div id="fullCalModal" class="modal fade" style="left: 50%">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span> <span class="sr-only">close</span></button>
                    <h4 id="modalTitle" class="modal-title"></h4>
                </div><br>
                Faculty: <span id="facEvent"></span><br><br>
                <% if current_user.admin? %>
                  Code: <span id="eventCode"></span><br><br>
                <% end %>
                Lecturer: <span id="speaker"></span><br>
                Start: <span id="startTime"></span><br>
                End: <span id="endTime"></span><br><br>
                <div id="modalBody" class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <% if current_user.admin? %>
    <div id="eventModal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span> <span class="sr-only">close</span></button>
                <h4 id="mTitle" class="modal-title">Create Event</h4>
            </div>
            <div id="mBody" class="modal-body"> Do you want to create a new event? </div>
            <div class="row-fluid modal-footer">
                <span class="span1" style="width:54px;" align="left">
                    <%= link_to "Yes", new_event_path, :class => "btn btn-material-lightgreen" %>
                </span>
                <span class="span1" style="width:54px;" align="right">
                    <button type="button" class="btn btn-material-red" data-dismiss="modal" style="top:5px;">No</button>
                </span>
            </div>
        </div>
      </div>
    </div>
    <% end %>

    <div id="calendar"></div>
    <div class="modal fade" id="modal"></div>
<% else %>
    <div class="center hero-unit" align="center" style="margin-top: 10px;">
        <h1 class="visible-lg-block" align="center">Welcome to the Schulich Round Attendance System</h1>
        <h2 class="visible-md-block" align="center">Welcome to the Schulich Round Attendance System</h2>
        <h3 class="visible-sm-block visible-xs-block" align="center">Welcome to the Schulich Round Attendance System</h3>

        <h2 class="visible-lg-block" align="center">You may sign up or sign in by clicking below.</h2>
        <h3 class="visible-md-block" align="center">You may sign up or sign in by clicking below.</h3>
        <h4 class="visible-sm-block visible-xs-block" align="center">You may sign up or sign in by clicking below.</h4>
        <%= link_to "Sign Up/Sign In", signup_path, class: "btn btn-large btn-material-lightgreen" %>
    </div>
    <div class="row-fluid"  align="center">
        <span class="span6" style="margin-right: 10px;">
            <%= link_to image_tag("schulich.png", alt: "Schulich"), "http://www.schulich.uwo.ca/" %>
        </span>
        <span class="span6">
            <%= link_to image_tag("western.png", alt: "Western"), "http://www.uwo.ca/" %>
        </span>
    </div>
<% end %>


<script>
    $(document).ready(function() {
        $.material.init();
    });
</script>