<% provide(:title, "All Events") %>
<link href="/assets/ripples.css" rel="stylesheet">
<link href="/assets/material-wfont.css" rel="stylesheet">
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
<script src="//code.jquery.com/jquery-1.8.3.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<script src="/assets/ripples.js" type="text/javascript"></script>
<script src="/assets/material.js" type="text/javascript"></script>
<h1 class="visible-lg-block" align="center">All Events</h1>
<h2 class="visible-md-block" align="center">All Events</h2>
<h3 class="visible-sm-block" align="center">All Events</h3>
<h4 class="visible-xs-block" align="center">All Events</h4>

<table class="table table-striped table-hover users">
	<thead>
        <tr>
            <th>Title</th>
            <th>Code</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
	<% @events.each do |event| %>
		<tr>
			<th> <%= event.title %> </th>
			<th> <%= event.code %> </th>
			<th>
				<%= link_to "Edit", edit_event_path(event) %>
			</th>
			<th>
				<%= link_to "Delete", event, method: :delete, confirm: "Are you sure you want to delete this event?" %>
			</th>
		</tr>
	<% end %>
	</tbody>
</table>