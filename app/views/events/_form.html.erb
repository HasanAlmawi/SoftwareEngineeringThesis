<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control floating-label" %>
  </div>
  <div class="field">
    <%= f.label :lecturer %><br>
    <%= f.text_field :lecturer, class: "form-control floating-label" %>
  </div>
  <div class="field">
    <%= f.label :department %><br>
    <%= f.select :faculty, [['All','all'],['Anesthesia & Perioperative Medicine','Anesthesia & Perioperative Medicine'], ['Clinical Neurological Sciences','Clinical Neurological Sciences'], ['Family Medicine','Family Medicine'], ['Medical Imaging','Medical Imaging'], ['Medicine', 'Medicine'], ['Obstetrics & Gynecology', 'Obstetrics & Gynecology'], ['Oncology', 'Oncology'], ['Ophthalmology', 'Ophthalmology'], ['Otolaryngology - Head and Neck Surgery', 'Otolaryngology - Head and Neck Surgery'], ['Paediatrics', 'Paediatrics'], ['Pathology & Laboratory Medicine', 'Pathology & Laboratory Medicine'], ['Physical Medicine & Rehabilitation', 'Physical Medicine & Rehabilitation'], ['Psychiatry', 'Psychiatry'], ['Surgery', 'Surgery']] %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control floating-label" %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>