<% provide(:title, "Attended Events") %>
<link href="/assets/ripples.css" rel="stylesheet">
<link href="/assets/material-wfont.css" rel="stylesheet">
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
<script src="//code.jquery.com/jquery-1.8.3.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<script src="/assets/ripples.js" type="text/javascript"></script>
<script src="/assets/material.js" type="text/javascript"></script>
<h1 class="visible-lg-block" align="center">Attended Events</h1>
<h2 class="visible-md-block" align="center">Attended Events</h2>
<h3 class="visible-sm-block" align="center">Attended Events</h3>
<h4 class="visible-xs-block" align="center">Attended Events</h4>

<table class="table table-striped table-hover users">
	<thead>
        <tr>
            <th>Event Title</th>
            <th>Description</th>
            <th>Lecturer</th>
            <th>Faculty</th>
            <th>Date</th>
            <th>Hours</th>
        </tr>
    </thead>
    <tbody>
	<% @attendances.each do |attendance| %>
		<tr>
			<% if User.find(attendance.user_id) == current_user %>
				<th> <%= Event.find_by_code(attendance.code).title %> </th>
				<th> <%= Event.find_by_code(attendance.code).description %> </th>
				<th> <%= Event.find_by_code(attendance.code).lecturer %> </th>
				<th> <%= Event.find_by_code(attendance.code).faculty %> </th>
				<th> <%= Event.find_by_code(attendance.code).start_time.to_date %> </th>
				<th> <%= (Event.find_by_code(attendance.code).end_time - Event.find_by_code(attendance.code).start_time)/3600 %> </th>
			<% end %>
		</tr>
	<% end %>
	</tbody>
</table>
